
<div class="container">
  <h1>New Cocktail</h1>

  <%= form_for(@cocktail) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-danger' %>
  <% end %>
  <br><br>
  <%= link_to  '<i class="fas fa-undo"></i> Back'.html_safe, cocktails_path, class: 'btn btn-xs btn-default' %>
</div>
